    "targetPath": "bin",
    "versions": ["VibeCustomMain", "Have_vibe_d", "Have_Int64_TimeStamp"],
    "dflags": ["-J."],
    "dependencies": {
        "vibe-d": ">=0.7.26",
        "pgator-backend": "~improve_errors",
        "dlogg": ">=0.3.3"
    },
    "subConfigurations":
    {
    	"dlogg": "colorized"
    },
	    
    "configurations": [
        {
            "name": "production",
            "targetType": "executable",
            "preBuildCommands": ["./bakeVersions.sh"]
        },
        {
            "name": "testclient",
            "description": "Simple json-rpc client to test the server",
            "targetType": "executable",
            "targetName": "pgator-client",
            "versions": ["RpcClient"]
        }
